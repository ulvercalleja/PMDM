<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut03.u3a7ElegirArma">
    <TextView
        android:id="@+id/u3a7tvSeleccionaPersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Seleccione un arma:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/u3a7ivArma1"
        android:layout_width="159dp"
        android:layout_height="144dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/u3a7tvSeleccionaPersonaje"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u3a7tvSeleccionaPersonaje"
        app:srcCompat="@drawable/arma_uno" />

    <ImageView
        android:id="@+id/u3a7ivArma2"
        android:layout_width="159dp"
        android:layout_height="144dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.796"
        app:layout_constraintStart_toEndOf="@+id/u3a7ivArma1"
        app:layout_constraintTop_toBottomOf="@+id/u3a7tvSeleccionaPersonaje"
        app:srcCompat="@drawable/arma_dos" />

    <ImageView
        android:id="@+id/u3a7ivArma3"
        android:layout_width="159dp"
        android:layout_height="144dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/u3a7ivArma1"
        app:layout_constraintStart_toStartOf="@+id/u3a7ivArma1"
        app:layout_constraintTop_toBottomOf="@+id/u3a7ivArma1"
        app:srcCompat="@drawable/arma_tres" />

    <ImageView
        android:id="@+id/u3a7ivArma4"
        android:layout_width="159dp"
        android:layout_height="144dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/u3a7ivArma2"
        app:layout_constraintStart_toStartOf="@+id/u3a7ivArma2"
        app:layout_constraintTop_toBottomOf="@+id/u3a7ivArma2"
        app:srcCompat="@drawable/arma_cuatro" />

    <Button
        android:id="@+id/u3a7btLimpiarArma"
        android:layout_width="185dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#8BC34A"
        android:text="Limpiar"
        android:textColor="#FAF9F9"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/u3a7ivArma4"
        app:layout_constraintStart_toStartOf="@+id/u3a7ivArma3"
        app:layout_constraintTop_toBottomOf="@+id/u3a7ivArma4" />

    <Button
        android:id="@+id/u3a7btCancelarArma"
        android:layout_width="185dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#EC4059"
        android:text="cancelar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/u3a7btLimpiarArma"
        app:layout_constraintStart_toStartOf="@+id/u3a7btLimpiarArma"
        app:layout_constraintTop_toBottomOf="@+id/u3a7btLimpiarArma" />
</androidx.constraintlayout.widget.ConstraintLayout>