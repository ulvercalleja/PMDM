<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/u2a6ivGanad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ut02.u2a6PiedraPapelTijeraPartida">

    <ImageView
        android:id="@+id/u2a6ivPerdido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/perdido" />

    <ImageView
        android:id="@+id/u2a6ivGanado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ganado" />

    <Button
        android:id="@+id/u2a6btSalir"
        android:layout_width="145dp"
        android:layout_height="92dp"
        android:layout_marginBottom="24dp"
        android:text="SALIR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/u2a6ivPapel"
        android:layout_width="127dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/u2a6btSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/papel" />

    <ImageView
        android:id="@+id/u2a6ivPiedra"
        android:layout_width="103dp"
        android:layout_height="106dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/u2a6btSalir"
        app:layout_constraintEnd_toStartOf="@+id/u2a6ivPapel"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/piedra" />

    <ImageView
        android:id="@+id/u2a6ivTijera"
        android:layout_width="114dp"
        android:layout_height="97dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/u2a6btSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/u2a6ivPapel"
        app:srcCompat="@drawable/tijera" />

    <TextView
        android:id="@+id/u2a6tvSeleccione"
        android:layout_width="246dp"
        android:layout_height="52dp"
        android:layout_marginBottom="32dp"
        android:text="Seleccione piedra, papel o tijera para continuar."
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/u2a6ivPapel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/u2a6tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="32dp"
        android:textColor="#03A9F4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/u2a6tvSeleccione"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/u2a6tvIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="32dp"
        android:text="IA"
        android:textColor="#E91E63"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/u2a6tvSeleccione"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/u2a6ivAzul"
        android:layout_width="180dp"
        android:layout_height="186dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="112dp"
        app:layout_constraintBottom_toTopOf="@+id/u2a6tvUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/esperandoazul" />

    <ImageView
        android:id="@+id/u2a6ivRojo"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/u2a6tvIA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/u2a6ivAzul"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/esperandorojo" />

    <TextView
        android:id="@+id/u2a6tvMarcadorAzul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/u2a6ivAzul"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/u2a6tvMarcadorRojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/u2a6ivRojo"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/u2a6tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#FF0000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/u2a6btReiniciar"
        android:layout_width="143dp"
        android:layout_height="93dp"
        android:layout_marginBottom="16dp"
        android:text="Reiniciar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>